<p style="color: green"><%= notice %></p>

<h1>Posts</h1>

<div id="posts">
  <% @posts.each do |post| %>
    <%= render post %>
    <p>
      <%= link_to "Show this post", post %>
    </p>
  <% end %>
</div>

<br/>
<div>
<%= link_to 'New Post', new_post_path %>
<%= link_to 'Home', root_path %>
<%= link_to 'Back', url_for(:back) %>
</div>
